
<div class="auth-container">
  <%= form_for(@resource, as: @resource_name, url: session_path(@resource_name), html: { class: "auth-form" }) do |f| %>
    <h2>Acesse sua conta</h2>

    <div class="field">
        <%= f.label "Email" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label "Senha" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if @devise_mapping.rememberable? %>
      <div class="auth-remember-me-container">
        <%- if @devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Esqueceu sua senha?", new_password_path(@resource_name) %><br />
        <% end %>

        <div class="auth-remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Lembrar-me" %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", class: "primary" %>
      <%= link_to "NÃ£o tem uma conta? Cadastre-se", new_registration_path(@resource_name) %>
    </div>
  <% end %>
</div>
